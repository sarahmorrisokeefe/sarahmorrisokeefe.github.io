---
import SectionHeading from '../ui/SectionHeading.astro';
import { personalInfo } from '../../data/personalInfo';

// TODO: verify this email is active before launching
const email = personalInfo.email;
---

<section id="contact" class="bg-ink-dark dark:bg-ink-darker py-20 md:py-28 px-6">
  <div class="max-w-5xl mx-auto">
    <div class="grid md:grid-cols-2 gap-16 items-start">
      <!-- Left column: heading + copy -->
      <div class="fade-up">
        <SectionHeading
          title="Get in touch"
          subtitle="Whether you're curious about my work, want to collaborate, or just want to talk about birds or climbing — I'm easy to reach."
          light={true}
        />

        <a
          href={`mailto:${email}`}
          class="inline-flex items-center gap-2 mt-2 text-cream/70 hover:text-sage-light transition-colors duration-200 text-sm group"
        >
          <svg
            class="w-4 h-4 text-sage-light"
            viewBox="0 0 20 20"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            aria-hidden="true"
          >
            <rect x="2" y="5" width="16" height="12" rx="2"></rect>
            <path d="M2 8l8 5 8-5" stroke-linecap="round" stroke-linejoin="round"></path>
          </svg>
          <span class="group-hover:underline underline-offset-2">{email}</span>
        </a>
      </div>

      <!-- Right column: contact form -->
      <div class="fade-up" style="transition-delay: 0.15s">
        <!--
          This form uses a mailto: action — no backend needed.
          TODO: if you want proper form handling (no mailto dialog),
          replace the action with a form service endpoint (Formspree, Resend, etc.)
          Example Formspree: action="https://formspree.io/f/YOUR_FORM_ID"
        -->
        <form
          action={`mailto:${email}`}
          method="post"
          enctype="text/plain"
          class="space-y-5"
        >
          <div>
            <label
              for="contact-name"
              class="block text-xs font-medium text-cream/50 uppercase tracking-wider mb-2"
            >
              Name
            </label>
            <input
              id="contact-name"
              type="text"
              name="name"
              required
              autocomplete="name"
              placeholder="Your name"
              class="w-full bg-cream/5 border border-cream/10 text-cream placeholder:text-cream/25 rounded-lg px-4 py-3 text-sm focus:outline-none focus:border-sage-light/60 focus:ring-1 focus:ring-sage-light/40 transition-colors duration-200"
            />
          </div>

          <div>
            <label
              for="contact-email"
              class="block text-xs font-medium text-cream/50 uppercase tracking-wider mb-2"
            >
              Email
            </label>
            <input
              id="contact-email"
              type="email"
              name="email"
              required
              autocomplete="email"
              placeholder="your@email.com"
              class="w-full bg-cream/5 border border-cream/10 text-cream placeholder:text-cream/25 rounded-lg px-4 py-3 text-sm focus:outline-none focus:border-sage-light/60 focus:ring-1 focus:ring-sage-light/40 transition-colors duration-200"
            />
          </div>

          <div>
            <label
              for="contact-message"
              class="block text-xs font-medium text-cream/50 uppercase tracking-wider mb-2"
            >
              Message
            </label>
            <textarea
              id="contact-message"
              name="message"
              required
              rows="5"
              placeholder="What's on your mind?"
              class="w-full bg-cream/5 border border-cream/10 text-cream placeholder:text-cream/25 rounded-lg px-4 py-3 text-sm focus:outline-none focus:border-sage-light/60 focus:ring-1 focus:ring-sage-light/40 transition-colors duration-200 resize-y"
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full bg-sage hover:bg-sage-light text-cream font-medium text-sm px-6 py-3.5 rounded-full transition-all duration-200 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-sage/30"
          >
            Send message
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
