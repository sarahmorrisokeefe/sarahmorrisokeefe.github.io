---
import type { Post } from '../../data/posts';

interface Props {
  post: Post;
}

const { post } = Astro.props;

const formattedDate = new Date(post.pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article
  class="group p-6 rounded-xl border border-cream-alt dark:border-ink/30 bg-cream dark:bg-ink-dark hover:shadow-md dark:hover:shadow-ink-darker/50 hover:-translate-y-0.5 transition-all duration-300 flex flex-col"
>
  <time
    datetime={post.pubDate}
    class="text-xs text-ink/40 dark:text-cream/30 mb-3 block font-medium tracking-wide uppercase"
  >
    {formattedDate}
  </time>

  <h3
    class="font-serif text-lg text-ink-dark dark:text-cream group-hover:text-sage dark:group-hover:text-sage-light transition-colors duration-200 mb-3 leading-snug"
  >
    {post.title}
  </h3>

  <p class="text-sm leading-relaxed text-ink dark:text-cream/60 mb-5 flex-1">
    {post.description}
  </p>

  <a
    href={post.url}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-flex items-center gap-1.5 text-xs font-medium text-sage dark:text-sage-light hover:text-ink-dark dark:hover:text-cream transition-colors duration-200 group/link"
  >
    Read more
    <svg
      class="w-3 h-3 translate-x-0 group-hover/link:translate-x-0.5 transition-transform duration-200"
      viewBox="0 0 12 12"
      fill="none"
      stroke="currentColor"
      stroke-width="1.5"
      aria-hidden="true"
    >
      <path d="M2 6h8M7 3l3 3-3 3" stroke-linecap="round" stroke-linejoin="round"></path>
    </svg>
  </a>
</article>
