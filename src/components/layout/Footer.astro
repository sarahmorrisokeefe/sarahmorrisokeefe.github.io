---
import SocialIcon from '../ui/SocialIcon.astro';
import { personalInfo } from '../../data/personalInfo';

const currentYear = new Date().getFullYear();
---

<footer class="bg-ink-dark dark:bg-ink-darker text-cream py-14 px-6">
  <div class="max-w-5xl mx-auto">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-8">
      <!-- Name + tagline -->
      <div>
        <p class="font-serif text-xl text-cream mb-1.5">{personalInfo.name}</p>
        <p class="text-cream/50 text-sm max-w-xs">{personalInfo.tagline}</p>
      </div>

      <!-- Social links -->
      <div class="flex items-center gap-5">
        {
          personalInfo.socialLinks.map((link) => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={link.name}
              class="text-cream/50 hover:text-sage-light transition-colors duration-200"
            >
              <SocialIcon platform={link.platform} size={20} />
            </a>
          ))
        }
      </div>
    </div>

    <!-- Bottom bar -->
    <div
      class="mt-10 pt-6 border-t border-cream/10 flex flex-col sm:flex-row justify-between items-center gap-2 text-cream/30 text-xs"
    >
      <p>Â© {currentYear} {personalInfo.name}. All rights reserved.</p>
      <p>Built with Astro + Tailwind.</p>
    </div>
  </div>
</footer>
